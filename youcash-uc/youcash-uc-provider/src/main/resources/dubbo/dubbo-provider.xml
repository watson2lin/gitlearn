<?xml version="1.0" encoding="UTF-8"?>  
<beans xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
    http://www.springframework.org/schema/beans/spring-beans.xsd  
    http://code.alibabatech.com/schema/dubbo  
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
  
    <!-- 提供方应用信息，用于计算依赖关系 -->  
    <dubbo:application name="uc-ws" />
  
    <!-- 注册中心暴露服务地址 -->  
   <dubbo:registry protocol="zookeeper" address="127.0.0.1:2181" />
  
    <!-- 暴露服务 -->  
    <!-- use tomcat server -->
    <!--<dubbo:protocol name="rest" port="9999" threads="500" server="tomcat" accepts="500" />-->
    <dubbo:provider id="exceptionFilter" filter="ExceptionFilter,-exception"></dubbo:provider>

    <dubbo:monitor protocol="dubbo" />
    
    <dubbo:service interface="com.youcash.uc.service.EmpService" ref="empService"/>
    <dubbo:service interface="com.youcash.uc.service.UserService" ref="userService"/>


</beans>  